[credential]
	helper = store
[alias]
    autopush = "!f() { \
        current_branch=$(git symbolic-ref --short HEAD); \
        modified_files=$(git status --porcelain | awk '{print $2}'); \
        if [ -z \"$modified_files\" ]; then \
            echo 'Nothing changed'; \
            return; \
        fi; \
        git add .; \
        if [ -z \"$1\" ]; then \
            git commit -m \"test: $current_branch branch build $(date '+%a %d %b %Y %r %Z')\"; \
        else \
            git commit -m \"$1\"; \
        fi; \
        git push origin $current_branch; \
    }; f"
    
    pushall = "!f() { \
        current_branch=$(git symbolic-ref --short HEAD); \
        for branch in main develop staging; do \
            echo \"Pushing to $branch...\"; \
            git checkout $branch; \
            git pull origin $branch; \
            git merge $current_branch -m \"merge: $current_branch into $branch\"; \
            git push origin $branch; \
        done; \
        git checkout $current_branch; \
        echo \"Returned to $current_branch\"; \
    }; f"